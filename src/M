#!/bin/ksh

plat=`uname`

if [ "$plat" = "AIX" ]
then
  flags="-q32 -qmaxmem=-1"
  cc="xlc"
  targdir="../bin/aix"
else
  flags="-m32 "
  cc="gcc"
  targdir="../bin/linux"
fi
if [ "$CCDEBUG" != "" ]
then
  flags="$flags -g"
else
  flags="$flags -O"
fi

export PLATFLAGS=$flags CC=$cc VERS=904
make -e -f Makefile.unix $*

rm -f $targdir/convH $targdir/mqsmfcsv
cp convH mqsmfcsv $targdir

